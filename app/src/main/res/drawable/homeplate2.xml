<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp" android:right="90dp" android:left="-90dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="0"
            android:pivotX="100%"
            android:pivotY="100%" >
            <shape>
                <solid android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>

    <item android:bottom="90dp">
        <shape>
            <size android:height="90dp" android:width="180dp"/>
            <solid android:color="@android:color/black"  />
        </shape>
    </item>

</layer-list>